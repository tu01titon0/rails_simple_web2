<%= form_with(model: @wallet, local: true) do |form| %>
    <div class="form-group">
     <%= form.label :title %>
      <%= form.text_field :title, placeholder:"Title", class:"form-control" %>
    </div>

    <div class="actions">
      <%= form.submit class:"btn btn-primary btn-sm" %>
    </div>

<% end %>